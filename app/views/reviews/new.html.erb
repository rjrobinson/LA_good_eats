<h1>Add A NEW REVIEW ! </h1>


<%= form_for([@restaurant, @restaurant.reviews.build]) do |f| %>
  <div>
    <%= f.label :reviewer  %><br>
    <%= f.text_field :reviewer %>
  </div>
  <div>
    <%= f.label :review %><br>
    <%= f.text_area :review %>
  </div>
  <div>
    <%= f.label :rating %><br>
    <%= f.select :rating,( 1..5 ) %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', restaurants_path %>
